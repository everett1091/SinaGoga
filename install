#!/bin/bash

echo "===== SinaGoga v1.0 –£—Å—Ç–∞–Ω–æ–≤—â–∏–∫ ====="
read -sp "–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å –¥–ª—è –¥–æ—Å—Ç—É–ø–∞: " pass
echo

# –ü–æ–ª—É—á–∞–µ–º —Ä–µ–∞–ª—å–Ω—ã–π –ø–∞—Ä–æ–ª—å —Å GitHub
realpass=$(curl -s https://raw.githubusercontent.com/everett1091/SinaGoga/main/auth.txt)

if [[ "$pass" != "$realpass" ]]; then
  echo "‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å. –î–æ—Å—Ç—É–ø –∑–∞–ø—Ä–µ—â—ë–Ω."
  exit 1
fi

echo "‚úÖ –ü–∞—Ä–æ–ª—å –ø—Ä–∏–Ω—è—Ç. –ó–∞–≥—Ä—É–∂–∞–µ–º –ø—Ä–æ—à–∏–≤–∫—É..."
wget -O sinagoga.tar.gz https://raw.githubusercontent.com/everett1091/SinaGoga/main/sinagoga.tar.gz

echo "üì¶ –†–∞—Å–ø–∞–∫–æ–≤—ã–≤–∞–µ–º –∞—Ä—Ö–∏–≤..."
tar -xzf sinagoga.tar.gz
cd sinagoga

echo "‚öôÔ∏è –ó–∞–ø—É—Å–∫–∞–µ–º —É—Å—Ç–∞–Ω–æ–≤–∫—É..."
chmod +x install.sh
./install.sh
