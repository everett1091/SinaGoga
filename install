echo "–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å –¥–ª—è —É—Å—Ç–∞–Ω–æ–≤–∫–∏ SinaGoga v1.0:"
read -s USER_PASS
echo
echo "üëâ –í–≤–µ–¥—ë–Ω–Ω—ã–π –ø–∞—Ä–æ–ª—å: [$USER_PASS]"

realpass=$(curl -s https://raw.githubusercontent.com/everett1091/SinaGoga/main/auth.txt | tr -d '\r\n')
echo "üì¶ –ü–∞—Ä–æ–ª—å —Å GitHub: [$realpass]"

if [[ "$USER_PASS" != "$realpass" ]]; then
  echo "‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å. –î–æ—Å—Ç—É–ø –∑–∞–ø—Ä–µ—â—ë–Ω."
  exit 1
fi

echo "‚úÖ –ü–∞—Ä–æ–ª—å –ø—Ä–∏–Ω—è—Ç. –ó–∞–≥—Ä—É–∂–∞–µ–º –ø—Ä–æ—à–∏–≤–∫—É..."
